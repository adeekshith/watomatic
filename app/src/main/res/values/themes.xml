<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WaReply" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Full Screen Dialog Theme -->
    <style name="FullScreenDialogTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:navigationBarColor">@color/background_color</item>
    </style>

    <!-- Custom Search Input Style -->
    <style name="SearchInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/search_background</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/search_stroke_color</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <!-- Bottom Navigation Active Label -->
    <style name="TextAppearance.BottomNav.Active" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bottom_nav_color</item>
    </style>

    <!-- Bottom Navigation Inactive Label -->
    <style name="TextAppearance.BottomNav.Inactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bottom_nav_color</item>
    </style>
</resources>