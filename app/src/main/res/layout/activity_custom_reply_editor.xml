<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <!-- Header with back button and title -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="?attr/colorOnSurface"
            app:titleTextColor="?attr/colorOnSurface"
            app:titleCentered="true"
            app:title="@string/mainAutoReplyLabel" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content Area -->
    <ScrollView
        android:id="@+id/custom_reply_editor_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="200dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <!-- Manual Replies Card (Active/Selected by default) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/manual_replies_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="2dp"
                app:strokeColor="?attr/colorPrimary"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Icon Circle -->
                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_circle_primary">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_edit"
                            android:tint="?attr/colorPrimary"
                            app:tint="?attr/colorPrimary" />
                    </FrameLayout>

                    <!-- Title and Description -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manual Replies"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="?android:textColorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Custom predefined messages"
                            android:textSize="12sp"
                            android:textColor="?android:textColorSecondary" />
                    </LinearLayout>

                    <!-- Active Badge -->
                    <TextView
                        android:id="@+id/manual_active_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_badge_active"
                        android:text="ACTIVE"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:layout_marginEnd="12dp" />

                    <!-- Settings Icon Button -->
                    <ImageView
                        android:id="@+id/manual_settings_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_settings"
                        android:tint="?android:textColorSecondary"
                        app:tint="?android:textColorSecondary"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:padding="4dp"
                        android:contentDescription="Settings" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Hidden text input layout to preserve view IDs -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/autoReplyTextInputLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:counterEnabled="true"
                app:counterMaxLength="500"
                app:endIconMode="clear_text"
                app:boxBackgroundMode="outline"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/autoReplyTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:gravity="top|start"
                    android:hint="@string/mainAutoReplyTextPlaceholder" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Hidden views to preserve existing view IDs -->
            <CheckBox
                android:id="@+id/enable_ai_replies_checkbox"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ai_explainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/automatic_ai_tag"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/other_ai_tag"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />


            <!-- Automatic AI Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/automatic_ai_provider_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:strokeColor="?attr/colorPrimary"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Icon Circle -->
                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_circle_blue">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_ai"
                            android:tint="@color/ai_blue"
                            app:tint="@color/ai_blue" />
                    </FrameLayout>

                    <!-- Title and Description -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/atomatic_ai"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="?android:textColorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/managed_smart_responses"
                            android:textSize="12sp"
                            android:textColor="?android:textColorSecondary" />
                    </LinearLayout>

                    <!-- Settings Icon (mapped to btn_automatic_ai_edit) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_automatic_ai_edit"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:minWidth="20dp"
                        android:minHeight="20dp"
                        android:padding="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        app:icon="@drawable/ic_settings"
                        app:iconSize="20dp"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="?android:textColorSecondary"
                        app:backgroundTint="@android:color/transparent"
                        app:elevation="0dp"
                        app:strokeWidth="0dp"
                        android:contentDescription="Settings" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bring Your Own Key (Other AI) Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/other_ai_provider_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:strokeColor="?attr/colorPrimary"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Icon Circle -->
                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_circle_green">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_key"
                            android:tint="@color/ai_green"
                            app:tint="@color/ai_green" />
                    </FrameLayout>

                    <!-- Title and Description -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bring_your_own_key"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="?android:textColorPrimary" />

                        <TextView
                            android:id="@+id/other_ai_provider_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/use_external_llm_apis"
                            android:textSize="12sp"
                            android:textColor="?android:textColorSecondary" />
                    </LinearLayout>

                    <!-- Settings Icon (mapped to btn_other_ai_edit) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_other_ai_edit"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:minWidth="20dp"
                        android:minHeight="20dp"
                        android:padding="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        app:icon="@drawable/ic_settings"
                        app:iconSize="20dp"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="?android:textColorSecondary"
                        app:backgroundTint="@android:color/transparent"
                        app:elevation="0dp"
                        app:strokeWidth="0dp"
                        android:contentDescription="Settings" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="?attr/colorSurface"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="32dp"
        android:elevation="8dp">

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveCustomReplyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingVertical="16dp"
            app:cornerRadius="16dp"
            app:elevation="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Templates Link with emoji -->
        <TextView
            android:id="@+id/tip_wato_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:selectableItemBackground"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:text="ðŸ¦©  View community templates and share yours  â†’"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?android:textColorSecondary" />

        <!-- Bottom Indicator Bar -->
        <View
            android:layout_width="128dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_bottom_indicator" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
