<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <!-- Header with back button and title -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="?attr/colorOnSurface"
            app:titleTextColor="?attr/colorOnSurface"
            app:titleCentered="true"
            app:title="@string/mainAutoReplyLabel" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content Area -->
    <ScrollView
        android:id="@+id/custom_reply_editor_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="200dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">


            <!-- Manual Replies Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/manual_replies_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#38383A"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Icon Circle -->
                    <FrameLayout
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_icon_circle_primary">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_chat"
                            app:tint="?attr/colorPrimary"
                            android:contentDescription="@string/manual_replies" />
                    </FrameLayout>

                    <!-- Title and Description -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/manual_replies"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="?android:textColorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Static predefined responses for all messages."
                            android:textSize="14sp"
                            android:textColor="?android:textColorSecondary"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/manual_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="?android:textColorSecondary"
                            android:layout_marginTop="8dp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <!-- Settings Icon -->
                    <ImageView
                        android:id="@+id/manual_settings_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings"
                        app:tint="?android:textColorSecondary"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:padding="4dp"
                        android:contentDescription="@string/settings" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Automatic AI Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/automatic_ai_provider_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="?attr/colorPrimary"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon Circle -->
                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_circle_blue">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_bolt"
                                app:tint="@color/ai_blue"
                                android:contentDescription="@string/automatic_ai" />
                        </FrameLayout>

                        <!-- Title and Description -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/automatic_ai"
                                    android:textStyle="bold"
                                    android:textSize="17sp"
                                    android:textColor="?android:textColorPrimary" />

                                <TextView
                                    android:id="@+id/automatic_ai_tag"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="FREE"
                                    android:textColor="#8E8E93"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:background="@drawable/bg_badge_gray"
                                    android:paddingHorizontal="6dp"
                                    android:paddingVertical="2dp"
                                    android:layout_marginStart="8dp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Instant, context-aware replies powered by our servers."
                                android:textSize="14sp"
                                android:textColor="?android:textColorSecondary"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <!-- Settings Icon (always visible in collapsed/expanded) -->
                        <ImageView
                            android:id="@+id/automatic_ai_settings_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_settings"
                            app:tint="?android:textColorSecondary"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:selectableItemBackgroundBorderless"
                            android:padding="4dp"
                            android:contentDescription="@string/settings" />

                        <!-- Check Icon (shows only when expanded) -->
                        <ImageView
                            android:id="@+id/automatic_ai_check_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check_circle"
                            app:tint="?attr/colorPrimary"
                            android:visibility="gone"
                            android:contentDescription="@string/selected" />
                    </LinearLayout>

                    <!-- Expanded Content -->
                    <LinearLayout
                        android:id="@+id/automatic_ai_expanded_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#38383A"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginHorizontal="16dp" />

                        <!-- Status Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp"
                            android:paddingBottom="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/automatic_ai_status_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_error_outline"
                                app:tint="#FF453A"
                                android:contentDescription="@string/status" />

                            <TextView
                                android:id="@+id/automatic_ai_status_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Status: Not Subscribed"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="?android:textColorPrimary"
                                android:layout_marginStart="8dp" />

                            <TextView
                                android:id="@+id/btn_automatic_ai_edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manage"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?android:selectableItemBackground"
                                android:padding="4dp" />
                        </LinearLayout>

                        <!-- Action Section - Not Subscribed State -->
                        <LinearLayout
                            android:id="@+id/automatic_ai_not_subscribed_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="16dp"
                            android:paddingBottom="16dp"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@drawable/bg_subscription_card"
                                android:padding="16dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn_unlock_subscription"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Unlock with Subscription"
                                    android:textColor="@android:color/black"
                                    android:textStyle="bold"
                                    android:textSize="15sp"
                                    app:backgroundTint="@android:color/white"
                                    app:cornerRadius="8dp"
                                    android:paddingVertical="10dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Action Section - Subscribed State -->
                        <LinearLayout
                            android:id="@+id/automatic_ai_subscribed_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="16dp"
                            android:paddingBottom="16dp"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/bg_subscription_card"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_workspace_premium"
                                    app:tint="?android:textColorSecondary"
                                    android:contentDescription="@string/premium" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_marginStart="12dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pro Plan - Active"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="?android:textColorPrimary" />

                                    <TextView
                                        android:id="@+id/subscription_renewal_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Renews on Oct 12, 2024"
                                        android:textSize="12sp"
                                        android:textColor="?android:textColorSecondary" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bring Your Own Key Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/other_ai_provider_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#38383A"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon Circle -->
                        <FrameLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_icon_circle_green">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_key"
                                app:tint="@color/ai_green"
                                android:contentDescription="@string/bring_your_own_key" />
                        </FrameLayout>

                        <!-- Title and Description -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bring_your_own_key"
                                android:textStyle="bold"
                                android:textSize="17sp"
                                android:textColor="?android:textColorPrimary" />

                            <TextView
                                android:id="@+id/other_ai_provider_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Use your own AI API provider credentials."
                                android:textSize="14sp"
                                android:textColor="?android:textColorSecondary"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <!-- Settings Icon -->
                        <ImageView
                            android:id="@+id/btn_other_ai_edit"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_settings"
                            app:tint="?android:textColorSecondary"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:selectableItemBackgroundBorderless"
                            android:padding="4dp"
                            android:contentDescription="@string/settings" />
                    </LinearLayout>

                    <!-- Expanded Status Section -->
                    <LinearLayout
                        android:id="@+id/other_ai_expanded_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#38383A"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginHorizontal="16dp" />

                        <!-- Status Text -->
                        <TextView
                            android:id="@+id/other_ai_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: Not Configured"
                            android:textSize="13sp"
                            android:textColor="?android:textColorSecondary"
                            android:paddingHorizontal="16dp"
                            android:paddingBottom="16dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Hidden text input layout to preserve view IDs -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/autoReplyTextInputLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:counterEnabled="true"
                app:counterMaxLength="500"
                app:endIconMode="clear_text"
                app:boxBackgroundMode="outline"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/autoReplyTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:gravity="top|start"
                    android:hint="@string/mainAutoReplyTextPlaceholder" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Hidden views to preserve existing view IDs -->
            <CheckBox
                android:id="@+id/enable_ai_replies_checkbox"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ai_explainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/other_ai_tag"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <!-- Hidden badge for manual card -->
            <TextView
                android:id="@+id/manual_active_badge"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="?attr/colorSurface"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="32dp"
        android:elevation="8dp">

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveCustomReplyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingVertical="16dp"
            app:cornerRadius="16dp"
            app:elevation="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Templates Link with emoji -->
        <TextView
            android:id="@+id/tip_wato_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:selectableItemBackground"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:text="ðŸ¦©  View community templates and share yours  â†’"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?android:textColorSecondary" />

        <!-- Bottom Indicator Bar -->
        <View
            android:layout_width="128dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_bottom_indicator" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
