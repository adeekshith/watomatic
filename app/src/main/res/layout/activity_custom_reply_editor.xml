<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="?attr/colorOnSurface"
            app:titleTextColor="?attr/colorOnSurface"
            app:titleCentered="true"
            app:title="@string/mainAutoReplyLabel" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/custom_reply_editor_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card 1: Auto reply text, Enable AI toggle -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mainAutoReplyLabel"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:textColor="?android:textColorPrimary"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/autoReplyTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:counterEnabled="true"
                        app:counterMaxLength="500"
                        app:endIconMode="clear_text"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/autoReplyTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="80dp"
                            android:hint="@string/mainAutoReplyTextPlaceholder" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <CheckBox
                        android:id="@+id/enable_ai_replies_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pref_enable_openai_replies_title"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ai_explainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/use_an_llm_like_openai_to_generate_smart_responses"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="?android:textColorSecondary"
                        android:layout_marginStart="36dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2: Atomatic AI PROVIDER (LLM) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/automatic_ai_provider_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:padding="16dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Automatic AI"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:textColor="?android:textColorPrimary"
                        android:layout_weight="2.5"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/automatic_ai_tag"
                        android:layout_width="5dp"
                        android:layout_height="25dp"
                        android:background="?attr/colorPrimary"
                        android:text="Paid"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="0.5"
                        />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 3: Other AI PROVIDER (LLM) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/other_ai_provider_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other AI LLM's"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:textColor="?android:textColorPrimary"
                            android:layout_weight="2.5"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/other_ai_tag"
                            android:layout_width="5dp"
                            android:layout_height="25dp"
                            android:background="@android:color/holo_green_dark"
                            android:text="Free"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_weight="0.5"
                            />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/other_ai_provider_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="12dp"
                        android:background="@android:color/transparent"
                        android:text="(Use your own key)"
                        android:drawablePadding="8dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Save Button -->
            <Button
                android:id="@+id/saveCustomReplyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp" />

            <!-- Optionally: Wato Message Link -->
            <Button
                android:id="@+id/tip_wato_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:text="@string/tip_view_messages_from_fellow_users"
                android:textAllCaps="false"
                android:textColor="?attr/colorControlNormal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
